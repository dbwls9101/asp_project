<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.prj.mapper.InquiryAttachMapper">
	
	<!-- 1. 파일 업로드 -->
	<insert id="insert" parameterType="org.prj.domain.FileInfoVO">
		INSERT INTO FILEINFO(uuid, uploadPath, fileName, idx, boradname)
		VALUES(#{uuid }, #{uploadPath }, #{fileName }, #{idx }, #{boradname })
	</insert>
	
	<!-- 2. 업로드 삭세 -->
	<delete id="delete" parameterType="int">
		DELETE FROM FILEINFO WHERE UUID=#{uuid }
	</delete>
	
	<!-- 3. 조회 -->
	<select id="findByIdx" parameterType="int" resultType="org.prj.domain.FileInfoVO">
		SELECT * FROM FILEINFO WHERE IDX = #{idx }
	</select>
	
	<!-- 4. 게시물 전체 삭제 (나중에 필요한 기능이다.)-->
	<delete id="deleteAll">
		DELETE FILEINFO WHERE IDX = #{idx }
	</delete>
	
</mapper>