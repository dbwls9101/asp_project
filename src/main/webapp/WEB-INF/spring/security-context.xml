<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="customLoginSuccess"
		class="org.prj.security.CustomLoginSuccessHandler"></bean>
	<bean id="customAccessDenied"
		class="org.prj.security.CustomAccessDeniedHandler"></bean>
	<bean id="bcryptPasswordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	<bean id="customUserDetailService"
		class="org.prj.security.CustomUserDetailService"></bean>
	<bean id="logoutSuccessHandler" class="org.prj.security.CustomLogoutSuccessHandler"></bean>

	<security:http auto-config="true">					<!-- 로그인/로그아웃할 때 통신 문제 관리 하는 것 -->
		<security:intercept-url pattern="/member/*"
			access="permitAll" />
		<security:intercept-url pattern="/user/*"
			access="hasRole('ROLE_USER')" />
		<security:intercept-url pattern="/partner/*"
			access="hasRole('ROLE_PARTNER')" />
		<security:intercept-url pattern="/admin/*"
			access="hasRole('ROLE_ADMIN')" />

		<!-- 로그인 기능 -->
		<!-- <security:form-login/> -->
		<security:form-login login-page="/member/login"
			username-parameter="id" password-parameter="password"
			login-processing-url="/member/login" always-use-default-target='true' />

		<!-- <security:form-login login-page="/customLogin" authentication-success-handler-ref="customLoginSuccess"/> -->

		<!-- 로그아웃 처리 -->
		<security:logout logout-url="/member/logout"
		invalidate-session="false"
		success-handler-ref="logoutSuccessHandler"
		delete-cookies="remember-me, JSESSIONID" />

		<!-- 에러 처리 -->
		<!-- <security:access-denied-handler error-page="/accessError"/> -->
		<security:access-denied-handler
			ref="customAccessDenied" />

		<!-- csrf 비활성화 -->
		<security:csrf disabled="true" />

		<!-- 자동 로그인 -->
		<security:remember-me
			data-source-ref="dataSource" token-validity-seconds="604800" />


	</security:http>

	<security:authentication-manager>		<!-- 인증과 권한(authorities)에 대한 것 -->
		<security:authentication-provider
			user-service-ref="customUserDetailService">
			<!-- <security:jdbc-user-service data-source-ref="dataSource" users-by-username-query="select 
				userid, userpw, enabled from tbl_member where userid=?" authorities-by-username-query="select 
				userid, auth from tbl_member_auth where userid=?" /> -->
			<security:password-encoder
				ref="bcryptPasswordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>

</beans>


